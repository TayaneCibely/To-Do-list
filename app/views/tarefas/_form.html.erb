  </div>

  <div class="field">
    <%= form.label :data_de_termino %>
    <%= form.datetime_select :data_de_termino %>
  </div>

  <div class="field">
    <%= form.label :prioridade %>
    <%= form.text_field :prioridade %>
  </div>

  <div class="actions">
    <%= form.submit %>
